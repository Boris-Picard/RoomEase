{% extends 'base.html.twig' %}

{% block title %}
	Register as Guest
{% endblock %}
{# #}
{% block body %}
	<section class="bg-white dark:bg-gray-900 h-screen mx-auto justify-center">
		<div class="container flex items-center justify-center min-h-screen px-6 mx-auto max-w-sm">

			{{ form_start(registrationForm, {'attr': {'class': 'w-full max-w-md'}}) }}
			<div class="flex justify-center mx-auto">
				<img class="w-auto h-7 sm:h-8" src="https://svgsilh.com/svg/1210520-3f51b5.svg" alt="website logo circle">
			</div>

			<div class="flex items-center justify-center mt-6">
				<a href="{{path('app_register_guest')}}" class="w-1/3 pb-4 font-medium text-center text-gray-500 capitalize dark:text-gray-300 {% if app.current_route == 'app_register_guest' %} border-b-2 border-blue-500 dark:border-blue-400 dark:text-white {% else %} border-b dark:border-gray-400 {% endif %}">
					Guest
				</a>

				<a href="{{path('app_register_host')}}" class="w-1/3 pb-4 font-medium text-center text-gray-800 capitalize dark:text-gray-300 {% if app.current_route == 'app_register_host' %} border-b-2 border-blue-500 dark:border-blue-400 dark:text-white {% else %} border-b dark:border-gray-400 {% endif %}">
					Host
				</a>
			</div>
			<div class="relative flex items-center mt-10">
				<span class="absolute">
					<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mx-3 text-gray-300 dark:text-gray-500" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
					</svg>
				</span>
				{{ form_row(registrationForm.username) }}
			</div>
			<div class="relative flex items-center">
				<span class="absolute">
					<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mx-3 text-gray-300 dark:text-gray-500" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
					</svg>
				</span>

				{{ form_row(registrationForm.email) }}
			</div>
			<div class="relative flex items-center">
				<span class="absolute">
					<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mx-3 text-gray-300 dark:text-gray-500" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
					</svg>
				</span>

				{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
			</div>
			{{ form_row(registrationForm.agreeTerms) }}
			<div class="flex flex-col">
				<button type="submit" class="w-full px-6 py-3 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-500 rounded-lg hover:bg-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50">
					Register as Guest
				</button>
			</div>
			<div class="mt-6 text-center ">
				<a href="{{path('app_login')}}" class="text-sm text-blue-500 hover:underline dark:text-blue-400">
					Already have an account?
				</a>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</section>
{% endblock %}
